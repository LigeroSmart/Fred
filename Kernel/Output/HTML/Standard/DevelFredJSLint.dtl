<div class="DevelFredBox">
    <h1>Fred-JSLint Results</h1>
    <style type="text/css">
        #FredJSLintScripts {
            height: 300px;
            overflow: auto;
        }

        .FredJSLintSuccessfull {
            color: red;
            font-weight: bold;
        }

        .FredJSLintError {
            margin-bottom: 6px;
        }

        #FredJSLintScripts p {
            margin:0;
            padding:0;
        }

        #FredJSLintScripts pre {
            margin:0;
            padding:0;

        }
    </style>
<!-- dtl:block:JSLintNotAllowed -->
    <p>JSLint check is only possible in OTRS version 2.5 or higher (with jQuery support)...</p>
<!-- dtl:block:JSLintNotAllowed -->

<!-- dtl:block:JSLintAllowed -->
    <script src="$Config{"Frontend::JavaScriptPath"}thirdparty/jslint/jslint.js" type="text/javascript"></script>
    <script src="$Config{"Frontend::JavaScriptPath"}FredJSLint.js" rel="fred" type="text/javascript"></script>
    <script rel="fred" type="text/javascript">
        OTRS.Fred.JSLint.Init();
    </script>
    <div style="padding:5px;">
        <div id="FredJSLintScripts"></div>
    </div>
<!-- dtl:block:JSLintAllowed -->

</div>
