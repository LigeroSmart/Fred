<div class="DevelFredBox">
    <h1>
        <input type="checkbox" title="Toggle this widget" checked="checked" onclick="document.getElementById('FredJSLintScripts').style.display = this.checked ? 'block' : 'none';"/>
        Fred-JSLint Results
    </h1>
<!-- dtl:block:JSLintNotAllowed -->
    <p>JSLint check is only possible in OTRS version 2.5 or higher (with jQuery support)...</p>
<!-- dtl:block:JSLintNotAllowed -->

<!-- dtl:block:JSLintAllowed -->
    <script src="$Config{"Frontend::JavaScriptPath"}thirdparty/jslint/jslint.js" type="text/javascript"></script>
    <script src="$Config{"Frontend::JavaScriptPath"}FredJSLint.js" type="text/javascript"></script>
    <script type="text/javascript">
        "use strict";
        Core.Fred.JSLint.Init();
    </script>
    <div style="padding:5px;" id="FredJSLintScripts">
        <div id="FredJSLintRunning">Checks are running...</div>
    </div>
<!-- dtl:block:JSLintAllowed -->
</div>
