    <ConfigItem Name="Fred::HTMLCheck" Required="0" Valid="1">
        <Description Lang="en">Turn on if you want an realtime HTML-checker.</Description>
        <Description Lang="de">Hier aktivieren wenn zur Laufzeit ein HTML-Checker ausgefhrt werden soll. WICHTIG: Das Cpan-Modul HTML::lint ist hierfr notwendig!</Description>
        <Group>Fred</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Option SelectedID="0">
                <Item Key="0">No</Item>
                <Item Key="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Fred::STDERRLog" Required="0" Valid="1">
        <Description Lang="en">Turn on if you want to see the STDERRLog.</Description>
        <Description Lang="de">Hier aktivieren wenn man zur Laufzeit das STDERRLog sehen will!</Description>
        <Group>Fred</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Option SelectedID="1">
                <Item Key="0">No</Item>
                <Item Key="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
